<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="triangle" class="com.naironics.objectinjection.Triangle">
		<property name="pointA" ref="pointZero" />
		<property name="pointB" ref="point2" />
		<property name="pointC" ref="point3" />
	</bean>

	<bean id="pointZero" class="com.naironics.objectinjection.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="point2" class="com.naironics.objectinjection.Point">
		<property name="x" value="10" />
		<property name="y" value="20" />
	</bean>

	<bean id="point3" class="com.naironics.objectinjection.Point">
		<property name="x" value="5" />
		<property name="y" value="35" />
	</bean>


</beans>


